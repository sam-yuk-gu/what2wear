<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="root" styleClass="bg-white" stylesheets="@/com/samyukgu/what2wear/layout/style.css, @/com/samyukgu/what2wear/member/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.samyukgu.what2wear.member.controller.MemberNameFixController">
   <VBox alignment="CENTER" prefHeight="768.0" prefWidth="1030.0">
      <padding>
         <Insets bottom="100.0" left="200.0" right="200.0" top="100.0" />
      </padding>
      <children>
         <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="200.0" spacing="60.0" styleClass="sep-section">
            <children>
               <Label prefWidth="100.0" styleClass="semi-bold-text" text="이름">
                  <font>
                     <Font size="16.0" />
                  </font></Label>
               <TextField fx:id="memberInputName" prefHeight="50.0" prefWidth="323.0" promptText="사용자 이름" styleClass="input-field" />
            </children>
         </HBox>
         <HBox alignment="CENTER" prefHeight="80.0" prefWidth="630.0" spacing="20.0">
            <children>
               <Button fx:id="cancelButton" onAction="#handleClickCancelButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" text="취소">
                  <styleClass>
                     <String fx:value="btn-white" />
                     <String fx:value="semi-bold-text" />
                  </styleClass></Button>
               <Button fx:id="confirmButton" onAction="#handleClickConfirmButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" text="수정">
                  <styleClass>
                     <String fx:value="btn-white" />
                     <String fx:value="semi-bold-text" />
                  </styleClass></Button>
            </children>
         </HBox>
      </children>
   </VBox>
</StackPane>

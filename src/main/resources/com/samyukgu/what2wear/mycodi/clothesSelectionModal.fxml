<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.samyukgu.what2wear.myCodi.controller.ClothesSelectionModalController">
    <children>

        <!-- 상단 헤더 -->
        <AnchorPane prefHeight="60.0" prefWidth="700.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 0 0 1 0;">
            <children>
                <Label fx:id="categoryLabel" layoutX="20.0" layoutY="15.0" text="옷 선택">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Label fx:id="countLabel" layoutX="20.0" layoutY="38.0" style="-fx-text-fill: #6c757d;" text="0개의 옷">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>

                <!-- 검색 필드 -->
                <HBox alignment="CENTER_LEFT" layoutX="450.0" layoutY="18.0" prefHeight="25.0" prefWidth="230.0"
                      style="-fx-background-color: white; -fx-border-color: #ced4da; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <children>
                        <TextField fx:id="searchField" prefWidth="200.0" promptText="옷 이름으로 검색..."
                                   style="-fx-background-color: transparent; -fx-border-color: transparent;" />
                        <Label style="-fx-font-size: 14px; -fx-text-fill: gray; -fx-padding: 5;" text="🔍" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>

        <!-- 메인 콘텐츠 영역 -->
        <AnchorPane prefHeight="430.0" prefWidth="700.0" VBox.vgrow="ALWAYS">
            <children>
                <!-- 스크롤 가능한 옷 목록 -->
                <ScrollPane fitToWidth="true" prefHeight="430.0" prefWidth="700.0"
                            style="-fx-background: white; -fx-background-color: white;">
                    <content>
                        <VBox prefWidth="680.0">
                            <children>
                                <!-- 로딩 인디케이터 -->
                                <StackPane fx:id="loadingContainer" prefHeight="200.0">
                                    <children>
                                        <ProgressIndicator fx:id="loadingIndicator" prefHeight="50.0" prefWidth="50.0" />
                                    </children>
                                </StackPane>

                                <!-- 옷 목록 컨테이너 -->
                                <FlowPane fx:id="clothesContainer" prefWidth="680.0" />
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </AnchorPane>

        <!-- 하단 버튼 영역 -->
        <AnchorPane prefHeight="60.0" prefWidth="700.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1 0 0 0;">
            <children>
                <HBox alignment="CENTER_RIGHT" layoutX="20.0" layoutY="15.0" prefHeight="30.0" prefWidth="660.0" spacing="10.0">
                    <children>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel"
                                prefHeight="30.0" prefWidth="80.0" text="취소"
                                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
                        <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#handleConfirm"
                                prefHeight="30.0" prefWidth="80.0" text="선택"
                                style="-fx-background-color: #007acc; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>

    </children>
</VBox>
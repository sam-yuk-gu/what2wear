<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="768.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.samyukgu.what2wear.wardrobe.controller.ListWardrobeController"
      stylesheets="@css/wardrobeList.css">
   <children>
      <VBox prefHeight="768.0" prefWidth="1030.0">
         <HBox fx:id="categoryButtonContainer" layoutX="14.0" layoutY="6.0" spacing="10.0">
            <children>
               <Button fx:id="allButton" onAction="#filterAll" text="전체" />
               <Button fx:id="topButton" onAction="#filterTops" text="상의" />
               <Button fx:id="pantsButton" onAction="#filterPants" text="바지" />
               <Button fx:id="dressButton" onAction="#filterDress" text="원피스 / 스커트" />
               <Button fx:id="bagButton" onAction="#filterBags" text="가방" />
               <Button fx:id="outerButton" onAction="#filterOuter" text="아우터" />
               <Button fx:id="shoesButton" onAction="#filterShoes" text="신발" />
               <Button fx:id="accessoryButton" onAction="#filterAccessory" text="악세사리" />
               <Button fx:id="etcButton" onAction="#filterEtc" text="기타" />
            </children>
         </HBox>

         <!-- 하단 콘텐츠 영역 -->
         <AnchorPane fx:id="mainContentArea" prefHeight="629.0" prefWidth="1030.0">
            <children>

               <!-- 오른쪽 상단 필터 및 검색창 -->
               <HBox fx:id="filterSearchContainer" alignment="CENTER_RIGHT" layoutX="551.0" layoutY="26.0" prefHeight="30.0" prefWidth="445.0" spacing="10.0">
                  <children>
                     <Button fx:id="favoriteButton" onAction="#filterFavorites" text="즐겨찾기" />

                     <!-- 수정된 정렬 ComboBox -->
                     <ComboBox fx:id="sortComboBox" onAction="#handleSortChange" prefWidth="120" promptText="정렬 방식">
                        <items>
                           <FXCollections fx:factory="observableArrayList">
                              <String fx:value="최신 순" />
                              <String fx:value="오래된 순" />
                              <String fx:value="이름순" />
                           </FXCollections>
                        </items>
                     </ComboBox>

                     <HBox fx:id="searchContainer" alignment="CENTER_LEFT">
                        <children>
                           <TextField fx:id="searchField" focusTraversable="false" prefWidth="200" promptText="검색어를 입력하세요" />
                           <Label fx:id="searchIcon" text="🔍" />
                        </children>
                     </HBox>
                  </children>
               </HBox>

               <!-- 상단 버튼들 -->
               <HBox fx:id="actionButtonContainer" layoutX="11.0" layoutY="5.0" prefHeight="81.0" prefWidth="200.0" spacing="5.0">
                  <children>
                     <VBox fx:id="addButton" alignment="CENTER" onMouseClicked="#handleAddWardrobeClick" prefHeight="70.0" prefWidth="70.0" spacing="5">
                        <children>
                           <ImageView fx:id="addIcon" fitHeight="40" fitWidth="40">
                              <image>
                                 <Image preserveRatio="true" url="@images/plus2.png" />
                              </image>
                           </ImageView>
                           <Label fx:id="addLabel" text="추가하기" />
                        </children>
                     </VBox>
                     <VBox fx:id="myWardrobeButton" alignment="CENTER" onMouseClicked="#handleMyCodiClick" prefHeight="70.0" prefWidth="70.0" spacing="5">
                        <children>
                           <ImageView fx:id="myWardrobeIcon" fitHeight="40" fitWidth="40">
                              <image>
                                 <Image preserveRatio="true" url="@images/myCodiImg.png" />
                              </image>
                           </ImageView>
                           <Label fx:id="myWardrobeLabel" text="나만의 코디" />
                        </children>
                     </VBox>
                  </children>
               </HBox>

               <ScrollPane fx:id="mainScrollPane" fitToWidth="true" hbarPolicy="NEVER" layoutX="21.0" layoutY="93.0" prefHeight="590.0" prefWidth="988.0" vbarPolicy="AS_NEEDED">
                  <content>
                     <VBox fx:id="contentContainer" maxWidth="988.0" prefWidth="988.0" spacing="1.0">
                        <!-- 여기에 내가 넣은 옷들이 들어갈거야!!! -->
                     </VBox>
                  </content>
               </ScrollPane>

               <!-- 페이지네이션 -->
               <Pagination fx:id="pagination" layoutX="361.0" layoutY="627.0" prefHeight="53.0" prefWidth="305.0" />

               <!-- 로딩 및 상태 표시 영역 -->
               <VBox fx:id="statusContainer" alignment="CENTER" layoutX="400.0" layoutY="300.0" prefHeight="100.0" prefWidth="200.0" visible="false">
                  <children>
                     <Label fx:id="statusLabel" text="로딩 중" />
                  </children>
               </VBox>
            </children>
         </AnchorPane>
      </VBox>
   </children>
</HBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="768.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21.0.8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.samyukgu.what2wear.wardrobe.controller.CreateWardrobeController"
      stylesheets="@css/wardrobeAdd.css">
    <children>


        <!-- 오른쪽 전체 -->
        <VBox prefHeight="768.0" prefWidth="1030.0">
            <!-- 상단 바 -->
            <AnchorPane fx:id="topBar" prefHeight="42.0" prefWidth="1030.0">
                <children>
                    <HBox layoutX="14.0" layoutY="6.0" spacing="10.0">
                        <children>
                            <ImageView fx:id="backButton" fitHeight="40" fitWidth="40" onMouseClicked="#handleBackClick">
                                <image>
                                    <Image preserveRatio="true" url="@../wardrobe/images/tabler_arrow-left.png" />
                                </image>
                            </ImageView>
                        </children>
                    </HBox>
                </children>
            </AnchorPane>

            <!-- 메인 콘텐츠 -->
            <AnchorPane fx:id="mainContent" prefHeight="718.0" prefWidth="1030.0">
                <children>
                    <HBox layoutX="50.0" layoutY="30.0" prefHeight="650.0" prefWidth="930.0" spacing="50">
                        <children>

                            <!-- 왼쪽: 이미지 + 키워드 -->
                            <VBox prefHeight="650.0" prefWidth="420.0" spacing="30" alignment="TOP_CENTER">
                                <padding>
                                    <Insets top="20" />
                                </padding>
                                <children>

                                    <!-- 이미지 업로드 영역 -->
                                    <VBox fx:id="imageUploadContainer" alignment="CENTER" spacing="20">
                                        <padding>
                                            <Insets top="30" bottom="30" left="30" right="30" />
                                        </padding>
                                        <children>
                                            <ImageView fx:id="pictureView" fitHeight="300.0" fitWidth="300.0"
                                                       preserveRatio="true">
                                                <image>
                                                    <Image url="@images/firstImg.png" />
                                                </image>
                                            </ImageView>
                                            <Button fx:id="uploadButton" prefWidth="150.0" prefHeight="40.0"
                                                    text="사진 선택" />
                                        </children>
                                    </VBox>

                                    <!-- 키워드 선택 -->
                                    <VBox fx:id="keywordContainer" alignment="CENTER" spacing="15">
                                        <padding>
                                            <Insets top="25" bottom="25" left="30" right="30" />
                                        </padding>
                                        <children>
                                            <Label fx:id="keywordLabel" text="스타일 키워드" />
                                            <ComboBox fx:id="keywordField" prefWidth="200" prefHeight="35"
                                                      promptText="키워드를 선택하세요">
                                                <items>
                                                    <FXCollections fx:factory="observableArrayList">
                                                        <String fx:value="캐주얼" />
                                                        <String fx:value="스트릿" />
                                                        <String fx:value="미니멀" />
                                                        <String fx:value="걸리시" />
                                                        <String fx:value="스포티" />
                                                        <String fx:value="클래식" />
                                                        <String fx:value="워크웨어" />
                                                        <String fx:value="로맨틱" />
                                                        <String fx:value="시크" />
                                                        <String fx:value="시티보이" />
                                                        <String fx:value="고프코어" />
                                                        <String fx:value="레트로" />
                                                    </FXCollections>
                                                </items>
                                            </ComboBox>
                                        </children>
                                    </VBox>

                                </children>
                            </VBox>

                            <!-- 오른쪽: 입력 폼 -->
                            <VBox fx:id="formContainer" prefHeight="650.0" prefWidth="460.0" spacing="25">
                                <padding>
                                    <Insets top="40" bottom="40" left="40" right="40" />
                                </padding>
                                <children>

                                    <Label fx:id="formTitle" text="옷 정보 입력" />

                                    <!-- 이름 -->
                                    <VBox spacing="8">
                                        <children>
                                            <Label fx:id="nameLabel" text="이름 *" />
                                            <TextField fx:id="nameField" prefHeight="35"
                                                       promptText="예: 화이트 면 티셔츠" />
                                        </children>
                                    </VBox>

                                    <!-- 카테고리 -->
                                    <VBox spacing="8">
                                        <children>
                                            <Label fx:id="categoryLabel" text="카테고리 *" />
                                            <ComboBox fx:id="categoryField" prefHeight="35" prefWidth="380"
                                                      promptText="카테고리를 선택하세요" />
                                        </children>
                                    </VBox>

                                    <!-- 브랜드 -->
                                    <VBox spacing="8">
                                        <children>
                                            <Label fx:id="brandLabel" text="브랜드 *" />
                                            <TextField fx:id="brandField" prefHeight="35"
                                                       promptText="예: 유니클로" />
                                        </children>
                                    </VBox>

                                    <!-- 사이즈 -->
                                    <VBox spacing="8">
                                        <children>
                                            <Label fx:id="sizeLabel" text="사이즈 *" />
                                            <TextField fx:id="sizeField" prefHeight="35"
                                                       promptText="예: M, 95, 270" />
                                        </children>
                                    </VBox>

                                    <!-- 색상 -->
                                    <VBox spacing="8">
                                        <children>
                                            <Label fx:id="colorLabel" text="색상 *" />
                                            <ComboBox fx:id="colorField" prefHeight="35" prefWidth="380"
                                                      promptText="색상을 선택하세요">
                                                <items>
                                                    <FXCollections fx:factory="observableArrayList">
                                                        <String fx:value="화이트" />
                                                        <String fx:value="블랙" />
                                                        <String fx:value="그레이" />
                                                        <String fx:value="레드" />
                                                        <String fx:value="핑크" />
                                                        <String fx:value="오렌지" />
                                                        <String fx:value="엘로우" />
                                                        <String fx:value="그린" />
                                                        <String fx:value="블루" />
                                                        <String fx:value="퍼플" />
                                                        <String fx:value="브라운" />
                                                    </FXCollections>
                                                </items>
                                            </ComboBox>
                                        </children>
                                    </VBox>

                                    <!-- 메모 -->
                                    <VBox spacing="8">
                                        <children>
                                            <Label fx:id="memoLabel" text="메모" />
                                            <TextField fx:id="memoField" prefHeight="60"
                                                       promptText="자유롭게 메모를 작성하세요 (선택사항)" />
                                        </children>
                                    </VBox>

                                    <!-- 버튼들 -->
                                    <HBox spacing="15" alignment="CENTER" prefHeight="50">
                                        <children>
                                            <Button fx:id="resetButton" onAction="#handleReset" prefWidth="120" prefHeight="40"
                                                    text="초기화" />
                                            <Button fx:id="saveButton" prefWidth="120" prefHeight="40"
                                                    text="저장하기" />
                                        </children>
                                    </HBox>
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                </children>
            </AnchorPane>
        </VBox>
    </children>
</HBox>
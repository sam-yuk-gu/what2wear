<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="root" prefHeight="768.0" prefWidth="1280.0" stylesheets="/com/samyukgu/what2wear/post/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.samyukgu.what2wear.post.controller.PostDetailController">

    <HBox>
        <VBox fx:id="mainVBox" prefWidth="1030.0" spacing="20.0">

            <!-- 게시글 본문 + 댓글 목록 스크롤 -->
        <ScrollPane fx:id="scrollPane" fitToWidth="true" styleClass="board_scroll_pane" VBox.vgrow="ALWAYS">
        <content>
            <VBox fx:id="board_vbox" prefHeight="768.0" spacing="40.0" styleClass="board_detail_vbox">
            <!-- 헤더 -->
            <HBox alignment="CENTER" prefHeight="81.0" prefWidth="1030.0">
                <Pane fx:id="header_pane" prefHeight="89.0" prefWidth="1030.0" styleClass="header_pane">
                    <Button layoutY="19.0" onAction="#handleBack" styleClass="arrow_button">
                        <graphic>
                            <ImageView fitHeight="24" fitWidth="24">
                                <image>
                                    <Image url="@/assets/images/title_left_arrow.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Label fx:id="header_text" layoutX="463.0" layoutY="25.0" styleClass="header_text" text="게시글 조회">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                </Pane>
            </HBox>

            <!-- 게시글 내용 -->
            <VBox fx:id="center_vbox" alignment="CENTER" prefHeight="668.0" prefWidth="1030.0" spacing="20.0">
                 <Label fx:id="titleLabel" prefHeight="23.0" prefWidth="990.0" styleClass="datail_title_text" text="제목">
                     <font>
                         <Font size="18.0" />
                     </font>
                 </Label>

                <VBox fx:id="content_hbox" alignment="CENTER" prefHeight="390.0" prefWidth="990.0" styleClass="content_hbox">
                    <Pane fx:id="content_pane" prefHeight="377.0" prefWidth="1030.0">
                        <!-- 사용자 정보 -->
                        <Pane fx:id="user_info_pane" prefHeight="65.0" prefWidth="1030.0">
                     <HBox alignment="CENTER" layoutX="14.0" layoutY="1.0" prefHeight="64.0" prefWidth="64.0">
                        <children>
                           <Pane prefHeight="64.0" prefWidth="64.0">
                              <children>
                                        <ImageView fitHeight="64" fitWidth="64">
                                            <image>
                                                <Image url="@/assets/images/default_profile.png" />
                                            </image>
                                        </ImageView>
                              </children>
                           </Pane>
                        </children>
                     </HBox>
                     <HBox alignment="CENTER" layoutX="76.0" prefHeight="65.0" prefWidth="876.0">
                        <children>
                           <Pane prefHeight="65.0" prefWidth="882.0">
                              <children>
                                  <Label fx:id="authorLabel" layoutX="14.0" layoutY="14.0" styleClass="author_text" text="작성자" />
                                  <Label fx:id="dateLabel" layoutX="14.0" layoutY="40.0" styleClass="comment_date" text="작성일" />
                              </children>
                           </Pane>
                        </children>
                     </HBox>
                        </Pane>
                  <HBox alignment="CENTER" layoutY="84.0" prefHeight="289.0" prefWidth="990.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="183.0" prefWidth="990.0">
                           <children>
                                    <!-- 게시글 내용 및 좋아요 -->
                                    <Pane fx:id="user_content_pane" prefHeight="295.0" prefWidth="990.0">
                                        <Label fx:id="contentLabel" layoutX="18.0" layoutY="14.0" prefHeight="14.0" prefWidth="808.0" styleClass="content_text" text="내용" />
                                        <ImageView fx:id="codi_img" fitHeight="180.0" fitWidth="180.0" layoutX="796.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@/assets/images/one_codi_img.png" />
                                            </image>
                                        </ImageView>
                                        <VBox fx:id="like_pane" alignment="CENTER" layoutX="457.0" layoutY="194.0" prefHeight="64.0" prefWidth="93.0" spacing="5.0">
                                            <Button fx:id="likeButton" onAction="#handleLikeClick" styleClass="arrow_button">
                                                <graphic>
                                                    <ImageView fx:id="likeIcon" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                                        <image>
                                                            <Image url="@/assets/images/empty_heart_icon.png" />
                                                        </image>
                                                    </ImageView>
                                                </graphic>
                                            </Button>
                                            <Label fx:id="likesLabel" prefHeight="14.0" styleClass="like_text" text="0" />
                                        </VBox>

                                    </Pane>
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                    </Pane>
                </VBox>

                <!-- 댓글 영역 -->
                <VBox fx:id="comment_vbox" alignment="CENTER" prefHeight="211.0" prefWidth="1030.0" spacing="10.0" styleClass="comment_section">
                    <Label prefHeight="35.0" prefWidth="959.0" styleClass="comment_title_text" text="댓글 (2)" />

                    <!-- 내 댓글 -->
                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="950.0" spacing="24.0">
                              <ImageView fitHeight="48.0" fitWidth="48.0">
                                  <image>
                                      <Image url="@/assets/images/default_profile.png" />
                                  </image>
                              </ImageView>
                        <VBox alignment="CENTER_LEFT" prefHeight="95.0" prefWidth="800.0" spacing="4.0">
                             <Label styleClass="comment_author" text="서울수경" />
                             <Label styleClass="comment_date" text="2025-07-18" />
                            <Label styleClass="comment_text" text="이 코디 예쁘네요!" />
                        </VBox>
                        <HBox alignment="CENTER_RIGHT" prefHeight="36.0">

                            <!-- 수정/삭제 버튼 -->
                        <Pane fx:id="two_button_pane" prefHeight="64.0" prefWidth="76.0">
                        <children>
                           <HBox alignment="CENTER_LEFT" prefHeight="32.0" prefWidth="84.0">
                              <children>
                                  <Button styleClass="arrow_button">
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0">
                                            <image>
                                                <Image url="@/assets/images/edit_icon.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                 </Button>
                              </children>
                           </HBox>
                           <Button graphicTextGap="0" layoutX="40.0" styleClass="arrow_button">
                              <graphic>
                                 <ImageView fitHeight="24.0" fitWidth="24.0">
                                    <image>
                                       <Image url="@/assets/images/trash_icon.png" />
                                    </image>
                                 </ImageView>
                              </graphic>
                           </Button>
                        </children>
                     </Pane>
                        </HBox>
                    </HBox>

                    <!-- 다른 사람 댓글 -->
                    <HBox alignment="CENTER" prefHeight="70.0" prefWidth="950.0" spacing="24.0">
                        <ImageView fitHeight="48" fitWidth="48">
                            <image>
                                <Image url="@/assets/images/default_profile.png" />
                            </image>
                        </ImageView>
                        <VBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="900.0" spacing="4.0">
                            <Label styleClass="comment_author" text="재벌집막내아들" />
                            <Label styleClass="comment_date" text="2025-07-18" />
                            <Label styleClass="comment_text" text="저도 비슷한 거 하나 있는데 얼마에 구매하셨나요?" />
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
        </content>
        </ScrollPane>

            <!-- 댓글 입력창 -->
            <HBox alignment="CENTER" prefHeight="139.0" prefWidth="1030.0" spacing="10.0">
                <TextField fx:id="commentField" prefHeight="50.0" prefWidth="883.0" promptText="댓글을 입력해주세요." styleClass="comment_input" />
                <Button fx:id="submitCommentButton" styleClass="black_background_button" text="확인" />
            </HBox>
        </VBox>
    </HBox>
</StackPane>
